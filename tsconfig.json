{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es5",
    "jsx": "react",
    "module": "esNext",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": false,
    "removeComments": true,
    "noImplicitReturns": true,
    "outDir": "build",
    "lib": ["es6", "es7", "dom"],
    "baseUrl": "./client/",
    "allowSyntheticDefaultImports": true,
    "types": ["node"],
    "skipLibCheck": true
  },
  "exclude": ["build", "node_modules"]
}
